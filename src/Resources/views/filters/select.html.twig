{% if defaultData is not defined %}
    {%  set defaultData = app.request.get(value) %}
{% endif %}
<div class="form-group">
    {% if print_label is defined and print_label == true %}<label>{{ (label is defined ? label : name)|raw }}</label>{% endif %}
    <select class="form-control {{ class is defined and class != '' ? class : '' }}" name="{{ value }}{{ multiple is defined and multiple == true ? '[]': '' }}" {{ multiple is defined and multiple == true ? 'multiple': '' }}>
        <option value="">{{ name }}</option>
        {% for key,option in options %}
            {% if multiple is defined and multiple == true %}
                <option value="{{ key }}" {{ key in defaultData ? 'selected' : '' }}>{{ option }}</option>
            {% else %}
                <option value="{{ key }}" {{ key == defaultData ? 'selected' : '' }}>{{ option }}</option>
            {% endif %}
        {% endfor %}
    </select>
</div>