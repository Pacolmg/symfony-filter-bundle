{#
    PacolmgSymfonyFilterBundle
    Layout

    Blocks:
      * pacolmg_symfony_filter_bundle_class_box
      * pacolmg_symfony_filter_bundle_class_box_title
      ** pacolmg_symfony_filter_bundle_box_title

      * pacolmg_symfony_filter_bundle_class_box_content
      * pacolmg_symfony_filter_bundle_form_id
      * pacolmg_symfony_filter_bundle_form_filters_block
      ** pacolmg_symfony_filter_bundle_form_filters

      * pacolmg_symfony_filter_bundle_form_buttons_block
#}
<div class="row">
    <div class="col-lg-12">
        <div class="{% block pacolmg_symfony_filter_bundle_class_box %}{% endblock %}">
            <div class="{% block pacolmg_symfony_filter_bundle_class_box_title %}{% endblock %}">
                {% block pacolmg_symfony_filter_bundle_box_title %}
                    <h5>{{ 'pacolmg_symfony_filter_bundle.title_filters'|trans }}</h5>
                {% endblock %}
            </div>
            <div class="{% block pacolmg_symfony_filter_bundle_class_box_content %}{% endblock %}">
                <form id="{% block pacolmg_symfony_filter_bundle_form_id %}pacolmg_symfony_filter_form{% endblock %}" role="form" class="filter-form">
                    <div class="row">
                        {% block pacolmg_symfony_filter_bundle_form_filters_block %}
                        <div class="col-md-10">
                            <div class="row">
                                {% block pacolmg_symfony_filter_bundle_form_filters %}
                                    {{ 'pacolmg_symfony_filter_bundle.empty_filters'|trans }}
                                {% endblock %}
                            </div>
                        </div>
                        {% endblock %}
                        {% block pacolmg_symfony_filter_bundle_form_buttons_block %}
                        <div class="col-md-2">
                            <div class="row d-flex justify-content-end mb-4 pl-3 pr-3">
                                <div class="col-12 btn-group ml-4 mr-3" role="group" aria-label="Filter buttons">
                                    <button type="submit" class="btn btn-primary"><i
                                                class="fas fa-search"></i> {{ 'pacolmg_symfony_filter_bundle.btn_search'|trans }}
                                    </button>
                                    <button type="reset" class="btn btn-secondary"><i
                                                class="fas fa-circle"></i> {{ 'pacolmg_symfony_filter_bundle.btn_reset'|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                        {% endblock %}
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
